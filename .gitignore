# Create a .gitignore file
cat <<EOL > .gitignore
# Dependencies
node_modules

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Build output
dist
build
.next
out

# Env files
.env
.env.local
.env.*.local

# Editor settings
.vscode
.idea
.DS_Store
EOL

# Remove node_modules from git history if already tracked
git rm -r --cached node_modules

# Stage and commit the .gitignore
git add .gitignore
git commit -m "Add .gitignore and remove node_modules"
